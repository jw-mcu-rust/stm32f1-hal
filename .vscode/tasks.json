{
    "version": "2.0.0",
    "problemMatcher": [
        "$rustc"
    ],
    "tasks": [
        {
            "label": "check",
            "type": "process",
            "command": "python",
            "args": [
                "scripts/build.py",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "build",
            "type": "process",
            "command": "python",
            "args": [
                "scripts/build.py",
                "--release"
            ],
            "group": "build",
        },
        {
            "label": "build_example_f103c8",
            "type": "process",
            "command": "python",
            "args": [
                "scripts/build.py",
                "-e",
                "f103c8"
            ],
            "group": "build",
        },
        {
            "label": "Test Windows",
            "type": "cargo",
            "command": "test",
            "args": [
                "--features=std",
                "--target=x86_64-pc-windows-msvc",
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
        }
    ]
}
