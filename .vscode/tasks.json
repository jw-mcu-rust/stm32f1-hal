{
    "version": "2.0.0",
    "problemMatcher": [
        "$rustc"
    ],
    "tasks": [
        {
            "label": "check",
            "type": "process",
            "command": "python",
            "args": [
                "scripts/build.py",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },

        },
        {
            "label": "build",
            "type": "process",
            "command": "python",
            "args": [
                "scripts/build.py",
                "--release"
            ],
            "group": "build",
        }
    ]
}
